{% extends '@admin/layout.html.twig' %}

{% block title "Edit Articles" %}

{% block body %}
    <p class="text-left">
        <a class="btn btn-primary" href="{{ path('admin.blog.create') }}">Create post</a>
    </p>

    <table class="table table-striped">
        <thead>
        <tr>
            <td>Title</td>
            <td>Actions</td>
        </tr>
        </thead>
        <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.name }}</td>
                    <td>
                        <a href="{{ path('admin.blog.edit', {id: item.id}) }}" class="btn btn-primary">Edit</a>
                        <form style="display: inline" action="{{ path('admin.blog.delete', {id: item.id}) }}" method="post" onsubmit="return confirm('Are you sure ?')">
                            <input type="hidden" name="_method" value="DELETE">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {{ paginate(items, 'admin.blog.index') }}
{% endblock %}