{% extends 'layout.html.twig' %}

{% block title 'Article | ' ~ post.name %}

{% block body %}
    <h1>Post {{ post.name }}</h1>

    <p class="text-muted">
        {% if post.category_id %}
            <a href="{{ path('blog.category', {'slug': post.category_slug}) }}" title="{{ post.category_name }}">
                Category : {{ post.category_name }}
            </a>
        {% endif %}
        Created {{ post.created_at | ago }}
    </p>

    {{ post.content | nl2br }}
{% endblock %}